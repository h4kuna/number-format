{
  "name": "h4kuna/number-format",
  "type": "library",
  "description": "Object wrapper above number_format",
  "homepage": "https://github.com/h4kuna/number-format",
  "license": "MIT",
  "authors": [
    {
      "name": "Milan Matějček",
      "email": "milan.matejcek@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "nette/utils": "^3.0",
    "nette/tester": "^2.0",
    "tracy/tracy": "^2.0",
    "phpstan/phpstan": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "h4kuna\\Number\\": "src"
    },
    "files": [
      "src/compatibility.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "h4kuna\\Number\\Tests\\": "tests/src"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse -c tests/config/phpstan.neon --level max src tests",
    "tests": "vendor/bin/tester -s -j 4 -C --colors 1 tests/src"
  }
}
